{
    "compilerOptions": {
        "target": "es5", // 指定ECMAScript目标版本
        "allowJs": true, //允许ts中引入js
        "jsx": "react",
        "removeComments": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入。
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.jsx",
        "src/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "es",
        "dist",
        "styleguide"
    ]
}
