{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["docs/**/*.ts", "docs/**/*.d.ts", "*.d.ts", "docs/**/*.tsx", "docs/**/*.vue", "index.d.ts"],
  "exclude": ["node_modules", "docs/.vitepress"]
}
